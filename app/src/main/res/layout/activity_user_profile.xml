<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.tutudu.youtubeapp.UserProfileActivity">


    <LinearLayout
        android:id="@+id/userProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dip"
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/userPicPA"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/common_google_signin_btn_icon_dark"/>


            <LinearLayout
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNamePA"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Namee"
                    android:textSize="25dip"/>

                <TextView
                    android:id="@+id/userEmailPA"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dip"
                    android:text="User Email"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/likedVideoBtnPA"
            android:layout_marginTop="50dip"
            android:layout_gravity="center"
            android:layout_width="160dip"
            android:layout_height="50dip"
            android:text="Liked Video"/>

        <Button
            android:id="@+id/subBtnPA"
            android:layout_marginTop="40dip"
            android:layout_gravity="center"
            android:layout_width="160dip"
            android:layout_height="50dip"

            android:text="Subscriptions"/>


        <Button
            android:id="@+id/userVideoBtnPA"
            android:layout_marginTop="40dip"
            android:layout_gravity="center"
            android:layout_width="160dip"
            android:layout_height="50dip"

            android:text="My video"/>

        <Button
            android:id="@+id/signOutBtnPA"
            android:layout_marginTop="40dip"
            android:layout_gravity="center"
            android:layout_width="160dip"
            android:layout_height="50dip"

            android:text="Sign Out"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="30dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfileLayout">

        <ImageView
            android:id="@+id/homePicPA"
            android:layout_width="190dip"
            android:layout_height="50dip"
            app:srcCompat="@android:drawable/ic_menu_compass"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />

        <ImageView
            android:id="@+id/trendsPicPA"
            android:layout_width="190dip"
            android:layout_height="50dip"
            app:srcCompat="@android:drawable/ic_media_ff"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
